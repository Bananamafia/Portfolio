@model List<Models.Tool>


<h1>Mein Skillset</h1>

<div class="row">

    <div class="col-md-4 p-2">
        <div class="skill-category p-3">
            <h2 class="text-center">Dev</h2>
            <div>
                @foreach (var tool in Model.Where(n => n.Category == "Dev"))
                {
                    <div class="d-flex justify-content-between" style="font-size:15pt;">

                        <div>@tool.Name</div>

                        <div class="d-flex justify-content-end align-items-center" style="font-size:10pt">
                            @for (int i = 0; i < 5; i++)
                            {
                                if (i < tool.Rating)
                                {
                                    <div class="text-info ml-2" style="filter:drop-shadow(1px 2px 2px black)"><i class="fas fa-circle"></i></div>
                                }
                                else
                                {
                                    <div style="position:relative; top:2px">
                                        <div class="text-white-50 ml-2" style="position:absolute; top:2px; left:1px"><i class="fas fa-circle"></i></div>
                                        <div class="text-black-50 ml-2"><i class="fas fa-circle"></i></div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4 p-2">
        <div class="skill-category p-3">
            <h2 class="text-center">Web</h2>
            <div>
                @foreach (var tool in Model.Where(n => n.Category == "Web"))
                {
                    <div class="d-flex justify-content-between" style="font-size:15pt;">

                        <div>@tool.Name</div>

                        <div class="d-flex justify-content-end align-items-center" style="font-size:10pt">
                            @for (int i = 0; i < 5; i++)
                            {
                                if (i < tool.Rating)
                                {
                                    <div class="text-info ml-1"><i class="fas fa-circle"></i></div>
                                }
                                else
                                {
                                    <div class="text-black-50 ml-1"><i class="fas fa-circle"></i></div>
                                }
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4 p-2">
        <div class="skill-category p-3">
            <h2 class="text-center">Sonstige</h2>
            <div>
                @foreach (var tool in Model.Where(n => n.Category == "Other"))
                {
                    <div class="d-flex justify-content-between" style="font-size:15pt;">

                        <div>@tool.Name</div>

                        <div class="d-flex justify-content-end align-items-center" style="font-size:10pt">
                            @for (int i = 0; i < 5; i++)
                            {
                                if (i < tool.Rating)
                                {
                                    <div class="text-info ml-1"><i class="fas fa-circle"></i></div>
                                }
                                else
                                {
                                    <div class="text-black-50 ml-1"><i class="fas fa-circle"></i></div>
                                }
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</div>