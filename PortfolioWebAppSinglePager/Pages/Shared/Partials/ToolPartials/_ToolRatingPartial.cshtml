@model Models.Tool

<div class="d-flex justify-content-between" style="font-size:15pt;">

    <div>@Model.Name</div>

    <div class="d-flex justify-content-end align-items-center" style="font-size:11pt">
        @for (int i = 0; i < 5; i++)
        {
            if (i < Model.Rating)
            {
                <div class="text-info ml-2" style="filter:drop-shadow(1px 2px 2px black)"><i class="fas fa-circle"></i></div>
            }
            else
            {
                <div style="position:relative; top:2px">
                    <div class="text-white-50 ml-2" style="position:absolute; top:2px; left:1px; filter:blur(1px)"><i class="fas fa-circle"></i></div>
                    <div class="text-black-50 ml-2"><i class="fas fa-circle"></i></div>
                </div>
            }
        }
    </div>
</div>